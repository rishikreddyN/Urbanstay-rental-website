<% layout("/layouts/boilerplate.ejs") %>

    <div class="container mt-5">

        <h3 class="card-title fw-bold">
            <%= listing.title %>
        </h3>

        <div class="card mx-auto shadow-sm" style="max-width: 800px; border-radius:18px;">

            <!-- image -->
            <img src="<%= listing.image.url || 'https://images.unsplash.com/photo-1602391833977-358a52198938?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MzJ8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60' %>"
                class="card-img-top" style="height:300px; object-fit:cover; border-radius:18px;"
                onerror="this.src='https:via.placeholder.com/800x400'">

            <div class="card-body">

                <!-- title -->


                <!-- description -->
                <p class="card-text text-muted">
                    <%= listing.description %>
                </p>

                <!-- price -->
                <h5 class="fw-bold">
                    ₹ <%= listing.price.toLocaleString("en-IN") %>
                        <span class="text-muted fs-6">night</span>
                </h5>

                <!-- location -->
                <p class="mb-1">
                    <%= listing.location %>
                </p>
                <p class="text-muted">
                    <%= listing.country %>
                </p>

                <!-- buttons -->
                <% if (currUser && currUser._id.equals(listing.owner)) { %>
                    <div class="mt-3 d-flex">

                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger me-3">
                            Edit
                        </a>

                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="btn btn-dark">
                                Delete
                            </button>
                        </form>

                    </div>
                    <% } %>
            </div>
        </div>
        <hr>
        
        <div class="mx-auto mt-5" style="max-width:800px;">

            <h4 class="mb-3 text-center">Leave a Review</h4>

            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

                <!-- ⭐ STAR RATING -->
                <div class="mb-3 text-center">
                    <label class="form-label d-block"></label>

                    <div class="star-rating">
                        <input type="radio" name="review[rating]" value="5" id="star5">
                        <label for="star5"></label>

                        <input type="radio" name="review[rating]" value="4" id="star4">
                        <label for="star4"></label>

                        <input type="radio" name="review[rating]" value="3" id="star3">
                        <label for="star3"></label>

                        <input type="radio" name="review[rating]" value="2" id="star2">
                        <label for="star2"></label>

                        <input type="radio" name="review[rating]" value="1" id="star1" required>
                        <label for="star1"></label>
                    </div>

                    <div id="ratingError" class="text-danger mt-2" style="display:none;">
                        Please select rating
                    </div>
                </div>

                <!-- COMMENT -->
                <div class="mb-3">
                    <label class="form-label">Comments</label>
                    <textarea name="review[comment]" rows="4" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please enter review before submitting
                    </div>
                </div>

                <div class="text-center">
                    <button class="btn btn-danger px-4">Submit</button>
                </div>
            </form>

        </div>
        <hr />
        <h3 class="mt-4 mb-3">All Reviews</h3>

        <div class="row">
            <% for(let review of listing.reviews){ %>

                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm p-3 rounded-4">

                        <h5 class="fw-bold">
                             <%= review.author ? review.author.username : "Anonymous" %>
                        </h5>

                        <p class="mb-1">
                            <%= review.comment %>
                        </p>

                        <p class="text-muted mb-0">
                            <% for(let i=1; i <=5; i++) { %>
                                <% if(i <=review.rating) { %>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <% } else { %>
                                        <i class="bi bi-star text-warning"></i>
                                        <% } %>
                                            <% } %>
                        </p>

                        <form method="POST"
                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <% if(currUser && review.author && currUser._id.equals(review.author._id)){ %>
                            <button class="btn btn-sm btn-dark">Delete</button>
                            <% } %>
                        </form>

                    </div>
                </div>

                <% } %>
        </div>